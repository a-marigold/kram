{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "declaration": true,
        "declarationMap": true,
        "outDir": ".dist",
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
